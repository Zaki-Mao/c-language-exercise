#include <stdio.h>
int main(void)
{
    int i,a[10];
    printf("请输入十个整数");
    for(i=0;i<10;i++)
    {
        scanf("%d",&a[i]);
        printf("%d",a[i]);
        
    }
    int max=a[0],min=a[0];
    for (i=1;i<10;i++)
    {
        
        if (a[i]>max)
        {
            max=a[i];
        }
    }
    for(i=1;i<10;++i)
    {
        if (a[i]<min)
        {
            min=a[i];
        }
    }
    printf("the largest number is %d,smallest number is %d",max,min);
    return 0;
    
    
    
    
}
