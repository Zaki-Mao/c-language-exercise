#include <stdio.h>
int main(void)
{
    
    int n,i,j,k;
    printf("请输入行数\n");
    scanf("%d",&n);
    for(i=0;i<n;++i)
    {
        for(j=n-1;j>i;--j)
            printf(" ");
        for(k=0;k<2*i+1;++k)
            printf("x");
        printf("\n");
        
    }
    return 0;
}

