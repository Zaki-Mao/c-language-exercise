#include <stdio.h>
int main(void)
{
    int a,i,num;
    printf("please enter a num");
    scanf("%d",&num);
    for (i=1;i<=num;i++)
    {
        a=i;
        if (a%2==1)
        {
            printf("+");
        }
        else
            printf("-");
    
    }
    return 0;
}
