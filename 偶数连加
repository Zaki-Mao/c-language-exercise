#include <stdio.h>
int main(void)
{
    int sum=0,a,no;
    printf("please enter a num\n");
    scanf("%d",&no);
    for(a=1;a<=no;a++) {
        if (a % 2!=0)
            sum+=a;
        
    }
    
    printf("sum=%d",sum);
    return 0;
    
}
