{
    //char a ='Z';
    int line,word,i;
    printf("enter a number line\n");
    scanf("%d",&line);
    for (i=1;i<=line;i++) {
        for(word=1;word<=i;word++)
        {
        printf("a");
        }
        //for (word=1; word<=i;++word) {
           // printf("%c",a-word+1);
        printf("\n");
        }
    
        
        

    
    return 0;
    
    
    
    
    
    
        
    

    
   
    
