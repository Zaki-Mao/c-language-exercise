#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    int i,j,len;
    printf("next there will be something brand new\n");
    printf("short side.");
    scanf("%d",&len);
    for (i=1;i<=len;i++){
        for (j=1;j<=i;j++)
            putchar('*');
        putchar('\n');
    }
    system("pause");
    return 0;

    

}

    




