#include <stdio.h>
int main(void)
{
    int no,i,sum=0;
    printf("please en a num\n");
    scanf("%d",&no);
    for (i=0;i<no;i++)
    {
        if (i%3==0||i%5==0)
            sum+=i;
        
        
    }
    printf("sum=%d",sum);
    return 0;
}
