#include <stdio.h>
int main(void)
{
    int i,j,n;
    printf("please ena num\n");
    scanf("%d",&n);
    for (i=1;i<=n;i++)
    {
        for (j=1;j<=abs(n/2+1-i);j++)
        {
            printf(" ");
        }
        for (j=1;j<=n-2*abs(n/2+1-i);j++)
            
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
