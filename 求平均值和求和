#include <stdio.h>
int main(void)
{
    int no,i;
    int sum=0,aver=0;
    printf("how many numbers u want to enter\n");
    scanf("%d",&no);
    int a[no];
    printf("please enter these numbers\n");
    for (i=0;i<no;i++) {
        scanf("%d",&a[i]);
        sum=sum+a[i];
    }
    aver=sum/no;
    printf("%d\n",sum);
    printf("%.2f\n",(double)aver);
    
    return 0;
}
